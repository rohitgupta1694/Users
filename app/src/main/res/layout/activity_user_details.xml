<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.UserDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detailActivityToolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/detailActivityToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="userName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="17dp"
            tools:text="Title" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/detailActivityUserImage"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:background="@color/grayLightest"
        android:transitionName="profileImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailActivityToolbar" />

    <TextView
        android:id="@+id/detailActivityUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/grayMedium"
        android:textSize="24sp"
        android:textStyle="bold"
        android:transitionName="userFullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailActivityUserImage"
        tools:text="Rohit Gupta" />


</androidx.constraintlayout.widget.ConstraintLayout>